{
	"lsp": {
		"rust-analyzer": {
			"initialization_options": {
				"check": {
					"command": "clippy" // rust-analyzer.check.command (default: "check")
				}
			}
		}
	},
	"file_types": {
		"JSONC": ["*.json5"]
	},
	"format_on_save": "on",
	"languages": {
		"TypeScript": {
			"code_actions_on_format": {
				"source.organizeImports": true
			},
			"format_on_save": "on",
			// This is a no-tailwind project sir...
			"language_servers": ["!tailwindcss-language-server", "eslint", "vtsls", "graphql"]
		},
		"TSX": {
			"code_actions_on_format": {
				"source.organizeImports": true
			},
			"format_on_save": "on"
		},
		"Svelte": {
			"format_on_save": "on",
			"language_servers": [
				"!tailwindcss-language-server",
				"!eslint",
				"svelte-language-server",
				"vtsls"
			]
		}
	}
}
